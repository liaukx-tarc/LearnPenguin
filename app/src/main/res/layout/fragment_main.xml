<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F3"
    android:id="@+id/mainFragment"
    tools:context="ui.main.MainFragment"
    android:paddingBottom="60dp">

    <LinearLayout
        android:id="@+id/linearLayoutNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/newsListMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="start"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/latest_news"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seeAllNews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/see_all_main"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsListMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbarSize="8dp"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutNews" />

</androidx.constraintlayout.widget.ConstraintLayout>